{% extends 'base.html.twig' %}
    {% block body %}
        <style>
            .button {
                margin: 5px 0 -20px 8px !important;
                padding: 5px;
                background-color: #eab3ac;
                border: #eab3ac solid 2px;
            }

            div.dataTables_wrapper div.dataTables_paginate ul.pagination {
                display: none;
            }

            .col-md-6 {
                margin-right: 190px !important;
            }
        </style>
        <div class="wrapper">
            <div class="content-wrapper">
                <section class="content">
                    <div class="container-fluid">
                        <div>
                            <div class="card-body">
                                <!-- Plannings Table -->
                                <table id="planningTable" class="table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Event Type</th>
                                        <th>Event Title</th>
                                        <th>Movie Room</th>
                                        <th>Projection Date</th>
                                        <th>Start time</th>
                                        <th>End time</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for pln in plannings %}
                                        <tr align="center" valign="middle">
                                            <td align="center" vertical-align="middle">{{ pln.id }}</td>
                                            <td align="center" VALIGN="BOTTOM">{{ pln.typeEvent }}</td>
                                            <td align="center" VALIGN="BOTTOM">{{ pln.titreEvent }}</td>
                                            <td align="center" VALIGN="BOTTOM">{{ pln.nomSalle }}</td>
                                            <td align="center" vertical-align="middle">{{ pln.date|date('d-m-Y') }}</td>
                                            <td align="center"
                                                vertical-align="middle">{{ pln.heureDebut|date('H:i:s') }}</td>
                                            <td align="center"
                                                vertical-align="middle">{{ pln.heureFin|date('H:i:s') }}</td>
                                            <td align="center" vertical-align="middle">
                                                <a style="color: white;background-color: #2c3e50!important" href="/plannings/edit/{{ pln.id }}" class="btn  mr-1"
                                                   disabled="true"><i
                                                            class="fa fa-edit"></i></a>
                                                <a style="color: white;background-color: #eab3ac" href="/plannings/delete/{{ pln.id }}" class="btn "><i
                                                            class="fa fa-trash-alt"></i></a>
                                                {# <a href="" class="btn btn-warning mr-1"><i class="fa fa-shopping-basket mr-2"></i>RÃ©server</a> #}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <footer class="main-footer" style="text-align: center">
                <strong>Copyright &copy; 2021 <a style="color: #eab3ac" href="https://adminlte.io">Infinite
                        Loop</a>.</strong> All rights reserved.
            </footer>
        </div>

    {% endblock %}


{% block javascripts %}

    <script>
        $(function () {

            var spectacleTable = $("#planningTable").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": [
                    "excel",
                    "pdf",
                    "print",
                    "colvis"
                ],
            });
            spectacleTable.buttons().container().appendTo('#planningTable_wrapper .col-md-6:eq(0)');


            var addPlnBtn = `<div class="btn-group ml-2">
                <div data-toggle="dropdown">
                    <button style="color: white;background-color: #eab3ac" type="button" class="btn btn-block  btn-raised">
                        <span class="fa fa-plus-circle mr-2"></span>
                        Add
                        <span class="fa fa-caret-down ml-3"></span>
                    </button>
                </div>
                <div class="dropdown-menu" role="menu">
                    <a class="dropdown-item" href="/plannings/new/Film">Un Film</a>
                    <a class="dropdown-item" href="/plannings/new/Spectacle">Un Spectacle</a>
                </div>
            </div>`

            // var addPlnBtn = '<a href="/plannings/new" type="button" class="btn btn-block btn-success ml-2 col-md-1" id="ajouterPln">' +
            //     '<span class="fa fa-plus-circle mr-2"></span>Ajouter</a>';


            var spectacleTable_wrapper = document.getElementById("planningTable_wrapper");
            spectacleTable_wrapper.childNodes[0].insertAdjacentHTML("afterbegin", addPlnBtn);
            spectacleTable_wrapper.childNodes[0].childNodes[2].classList.remove("col-md-6");
            spectacleTable_wrapper.childNodes[0].childNodes[2].classList.add("col-md-3");
        });

        $('#ajouterPln').click(function (e) {
            e.preventDefault();
        });
    </script>
{% endblock %}