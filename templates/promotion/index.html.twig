{% extends 'base.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 2em auto;
            max-width: 3000px;
            width: 90%;
            font: 12px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="wrapper">

        <div class="content-wrapper">

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">

                                <!-- /.card-header -->
                                <div class="card-body">

                                    <table id="example1" class="table table-bordered table-striped">
                                        <h3 style="margin-bottom: -20px">Promotions Table</h3>
                                        <a href="{{ path('add2') }}" class="btn float-right" style="color: white;background-color: #eab3ac;margin-top: -3px;margin-bottom: 10px">
                                            <span class="fa fa-plus-circle mr-2"></span>Add
                                        </a>
                                        <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Critere</th>
                                            <th>IDUser</th>
                                            <th>Reduction</th>
                                            <th>StartDate</th>
                                            <th>EndDate</th>
                                            <th>Actions</th>
                                        </tr>

                                        <tr {% for p in promotion %}>
                                            <td>{{ p.id }}</td>
                                            <td>{{ p.critaire }}</td>
                                            <td>{{ p.idUser }}</td>
                                            <td>{{ p.reduction }}</td>
                                            <td>{{ p.dated|date('Y-m-d') }}</td>
                                            <td>{{ p.datef|date('Y-m-d') }}</td>
                                            <td><a class="btn" style="background-color: #2c3e50;color: white;" href="{{ path('update2',{'id':p.id}) }}"><i
                                                            class="fas fa-edit"></i></a>
                                            <a class="btn" style="background-color: #eab3ac;color: white;"
                                               href="{{ path('delete',{'id':p.id}) }}"><i class="far fa-trash-alt"></i></a>
                                            </td>
                                        </tr {% endfor %} >

                                        </thead>
                                    </table>
                                </div>
                            </div>

                        </div>

                    </div>
            </section>
        </div>
    </div>

{% endblock %}
