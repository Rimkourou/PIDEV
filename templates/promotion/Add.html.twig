{% extends 'base.html.twig' %}
{% block title %}Add{% endblock %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .select {
            width: 100%;
            border: 1px solid black;
            border-radius: 05px;
            padding: 10px 15px 10px 15px;
        }
        .button {
            margin: 10px 0 10px 0;
            float: right;
            padding: 5px;
            background-color: #eab3ac;
            border: #eab3ac solid 2px;
        }
    </style>
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-6">
                                    <h3 style="margin: 10px 0 10px 0;">Add Promotion</h3>
                                </div>
                                <div class="col-6">
                                    <button class="button" style="margin-left: 10px">
                                        <a style="color: white" href="{{ path('afficheP') }}">back to list</a>
                                    </button>
                                </div>
                            </div>

                            <!-- Main content -->
                            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                            {{ form_widget(form) }}
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer" style="text-align: center">
            <strong>Copyright &copy; 2021 <a style="color: #eab3ac" href="https://adminlte.io">Infinite
                    Loop</a>.</strong> All rights reserved.
        </footer>
    </div>
{% endblock %}