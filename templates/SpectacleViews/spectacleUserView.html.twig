{% extends 'baseMembre.html.twig' %}
{% block title %}List Des Spectacles{% endblock %}

{% block body %}
    {% block mainContent %}
        {# <div class="card" style="width: 380px;box-shadow: 0 2px 7px #dfdfdf;background: #fafafa;"> #}

        <style>
            .button {
                margin: 10px 0 10px 0;
                float: right;
                padding: 5px;
                background-color: #eab3ac;
                border: #eab3ac solid 2px;
            }

            .container2 {
                margin: 20px 50px 200px 50px;
            }

            .wrapper {
                background-color: #f4f6f9;
            }

            .photo-filter {
                /*filter: grayscale(80%);*/
                filter: brightness(80%);
                -webkit-filter: brightness(80%);
            }
        </style>
        <div class="wrapper">
            <div class="container2">
                <section class="content">
                    <div class="card-body">
                        <div class="row">
                            {% for spectacle in spectacles %}
                                <div class="col-md-12 col-lg-6 col-xl-3">
                                    <div class="card mb-3 bg-gradient-dark" style="width: 300px;">
                                        <img src="{{ asset('dist/img/' ~ spectacle.imagePath) }}"
                                             class="photo-filter"
                                             alt="Image du spectacle {{ spectacle.titre }}"
                                             title="Image du spectacle '{{ spectacle.titre }}'"
                                             width="300px" height="300px">
                                        <div class="card-img-overlay d-flex flex-column justify-content-end">
                                            <h3 class="card-text text-white pb-3"
                                                style="text-decoration: underline;">{{ spectacle.titre }}</h3>
                                            <h6 class="card-text text-white">Id: {{ spectacle.id }}</h6>
                                            <h6 class="card-text text-white">Date De
                                                Sortie: {{ spectacle.date.format('d-m-Y') }}</h6>
                                            <h6 class="card-text text-white">Genre: {{ spectacle.genre }}</h6>
                                            <div class="row justify-content-end">
                                                <div class="btn-group ml-2">
                                                    <div data-toggle="dropdown">
                                                        <a href="" class="text-white"><span
                                                                    class="fa fa-calendar-alt mr-2"></span>Plannings</a>
                                                    </div>
                                                    <div class="dropdown-menu" role="menu">
                                                        <a class="dropdown-item"
                                                           href="{{ path('afficher_plannings_User_Calendar_of_certain_event', {'titre': spectacle.titre}) }}">Calendar</a>
                                                        <a class="dropdown-item"
                                                           href="{{ path('afficher_plannings_User_Table_of_certain_event', {'titre': spectacle.titre}) }}">Table</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </section>

            </div>
            <footer class="main-footer" style="text-align: center;margin-left:0px">
                <strong>Copyright &copy; 2021 <a style="color: #eab3ac" href="https://adminlte.io">Infinite
                        Loop</a>.</strong> All rights reserved.
            </footer>
        </div>


    {% endblock %}
{% endblock %}