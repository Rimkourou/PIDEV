{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 2em auto;
            max-width: 3000px;
            width: 90%;
            font: 12px/1.5 sans-serif;
        }

        .example {
            max-width: 3000px;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
            <div class="wrapper">

                <div class="content-wrapper">

                    <!-- Main content -->
                    <section class="content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-12">

                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <div class="col-6">
                                            {{ form(form) }}

                                        </div>

                                        <table id="example2" class="table table-bordered table-hover">
                                        <h3 style="margin-bottom: -20px">UserTable</h3>
                                        <a href="{{ path('add') }}" class="btn float-right" style="color: white;background-color: #eab3ac;margin-top: -3px;margin-bottom: 10px">
                                            <span class="fa fa-plus-circle mr-2"></span>Add
                                        </a>
                                        <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nom</th>
                                            <th>Prenom</th>
                                            <th>Role</th>
                                            <th>Email</th>
                                            <th>state</th>
                                            <th>Actions</th>
                                        </tr>
                                        <tr {% for u in user %}>
                                            <td>{{ u.id }}</td>
                                            <td>{{ u.nom }}</td>
                                            <td>{{ u.prenom }}</td>
                                            <td>{{ u.role }}</td>
                                            <td>{{ u.email }}</td>
                                            <td>{{ u.state }}</td>
                                            <td><a class="btn" style="background-color: #2c3e50;color: white;"
                                                   href="{{ path('update',{'id':u.id}) }}"><i
                                                            class="fas fa-edit"></i></a>
                                            <a class="btn" style="background-color: #eab3ac;color: white;" href="{{ path('d',{'id':u.id}) }}"><i class="far fa-trash-alt"></i></a></td>
                                        </tr {% endfor %} >
                                        </thead>
                                    </table>
                                </div>
                            </div>

                        </div>

                    </div>
            </section>
        </div>
    </div>

{% endblock %}
