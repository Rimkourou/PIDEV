{% extends 'base.html.twig' %}
{% block title %}Film index{% endblock %}

{% block body %}
    <style>
        .button {
            margin: 5px 0 -20px 8px !important;
            padding: 5px;
            background-color: #eab3ac;
            border: #eab3ac solid 2px;
        }

        div.dataTables_wrapper div.dataTables_paginate ul.pagination {
            display: none;
        }

        .col-md-6 {
            margin-top: -30px !important;
        }
    </style>
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div>
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <a href="{{ path('film_new') }}" type="button"
                                       style="color: white;background-color: #eab3ac"
                                       class="btn btn-block  ml-2 col-md-1"><span class="fa fa-plus-circle mr-2"></span>Add</a>
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Author</th>
                                        <th>Category</th>
                                        <th>Type</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for film in films %}
                                        <tr>
                                            <td>{{ film.id }}</td>
                                            <td>{{ film.titre }}</td>
                                            <td style="width: 40%!important;">{{ film.description }}</td>
                                            <td>{{ film.auteur }}</td>
                                            <td>{{ film.categorie }}</td>
                                            <td>{{ film.genre }}</td>
                                            <td>
                                                <div class="row">
                                                    <button type="button"
                                                            style="background-color: #0a0e14!important;margin:0px 10px 10px 15px "
                                                            class="btn"><a style="color: white"
                                                                           href="{{ path('film_show', {'id': film.id}) }}"><i
                                                                    class="far fa-eye"></i></a></button>
                                                    <button type="button"
                                                            style="background-color: #2c3e50!important;margin:0px 10px 10px  0px "
                                                            class="btn"><a style="color: white"
                                                                           href="{{ path('film_edit', {'id': film.id}) }}"><i
                                                                    class="fas fa-edit"></i></a></button>
                                                    {{ include('film/_delete_form.html.twig') }}
                                                </div>

                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer" style="text-align: center">
            <strong>Copyright &copy; 2021 <a style="color: #eab3ac" href="https://adminlte.io">Infinite
                    Loop</a>.</strong> All rights reserved.
        </footer>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>

    <script>
        function myFunction() {
            document.getElementById("myDIV").style.textOverflow = "ellipsis";
        }
    </script>
{% endblock %}
