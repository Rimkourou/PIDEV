{% extends 'base.html.twig' %}
{% block title %}Film index{% endblock %}

{% block body %}
    <style>
        .button {
            margin: 10px 0 10px 0;
            float: right;
            padding: 5px;
            background-color: #eab3ac;
            border: #eab3ac solid 2px;
        }
    </style>
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <br>
                            {% for film in films %}
                            <card style="margin-left: 15px">
                                <a href="{{ path('film_showMember', {'id': film.id}) }}"><img src="{{ asset('dist/img/' ~ film.img) }}" width="230" height="260"></a>
                            </card>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer" style="text-align: center">
            <strong>Copyright &copy; 2021 <a style="color: #eab3ac" href="https://adminlte.io">Infinite
                    Loop</a>.</strong> All rights reserved.
        </footer>
    </div>
{% endblock %}
