{% extends 'base.html.twig' %}
{% block title %}Film index{% endblock %}

{% block body %}
    <style>
        .button {
            margin: 10px 0 10px 0;
            float: right;
            padding: 5px;
            background-color: #eab3ac;
            border: #eab3ac solid 2px;
        }
    </style>
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <form method="post" action="{{ path('recherche') }}">
                                <div class="input-group">
                                    <input type="text"  class="form-control" placeholder="Search"
                                           name="search">
                                </div>
                            </form>
                            <br>
                            {% for film in films %}
                                <card style="margin-left: 15px">
                                    <a href="{{ path('film_showMember', {'id': film.id}) }}"><img
                                                src="{{ asset('dist/img/' ~ film.img) }}" width="230" height="260"></a>
                                </card>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <h3 style="margin: 20px 0px 20px 15px;">Drama</h3>
                            {% for film in films %}
                                {% if film.genre =='Drama' %}
                                    <card style="margin-left: 15px">
                                        <a href="{{ path('film_showMember', {'id': film.id}) }}"><img
                                                    src="{{ asset('dist/img/' ~ film.img) }}" width="230" height="260"></a>
                                    </card>
                                {% endif %}

                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <h3 style="margin: 20px 0px 20px 15px;">Horror</h3>
                            {% for film in films %}
                                {% if film.genre =='Horror' %}
                                    <card style="margin-left: 15px">
                                        <a href="{{ path('film_showMember', {'id': film.id}) }}"><img
                                                    src="{{ asset('dist/img/' ~ film.img) }}" width="230" height="260"></a>
                                    </card>
                                {% endif %}

                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <h3 style="margin: 20px 0px 20px 15px;">Action</h3>
                            {% for film in films %}
                                {% if film.genre =='Action' %}
                                    <card style="margin-left: 15px">
                                        <a href="{{ path('film_showMember', {'id': film.id}) }}"><img
                                                    src="{{ asset('dist/img/' ~ film.img) }}" width="230" height="260"></a>
                                    </card>
                                {% endif %}

                            {% endfor %}
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer" style="text-align: center">
            <strong>Copyright &copy; 2021 <a style="color: #eab3ac" href="https://adminlte.io">Infinite
                    Loop</a>.</strong> All rights reserved.
        </footer>
    </div>
{% endblock %}
