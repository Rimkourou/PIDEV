{% extends 'baseMembre.html.twig' %}
{% block title %}Film index{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('/path/to/bootstrap.min.css') }}"/>
    <script src="{{ asset('/path/to/jquery.min.js') }}"></script>
    <script src="{{ asset('/path/to/bootstrap.min.js') }}"></script>
    <script src="{{ asset('carousel.js') }}"></script>
    <style>
        .button {
            margin: 10px 0 10px 0;
            float: right;
            padding: 5px;
            background-color: #eab3ac;
            border: #eab3ac solid 2px;
        }

        .container2 {
            margin: 20px 50px 20px 50px;
        }

        .wrapper {
            background-color: #f4f6f9;
        }
    </style>
    <div class="wrapper">
        <div>
            <section class="content">
                <form method="post" action="{{ path('recherche') }}">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search"
                               name="search" style="margin: 15px 70% 0 65px;">
                    </div>
                </form>
                <div style="background: rgb(2,0,36);background: linear-gradient(356deg, rgba(2,0,36,1) 0%, rgba(44,62,80,1) 0%, rgba(234,179,172,1) 100%);padding-bottom: 50px">
                    <h3 style="margin: 20px 0px 30px 15px;color:white;padding-top:20px;text-align: center;font-weight: 600;text-transform: uppercase;">
                        Most watched Movies</h3>
                    <div class="container2">
                        <div class="row">
                            <div class="col-12">
                                {% for t in tests %}
                                    <card style="margin-left: 15px">
                                        <a href="{{ path('film_showMember', {'id': t.id}) }}"><img
                                                    src="{{ asset('dist/img/' ~ t.img) }}" width="230" height="260"></a>
                                    </card>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container2" id="test">
                    <div class="carousel slide" data-ride="carousel" data-interval="3000">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="row">
                                    {% for film in films %}
                                        <div class="col-sm">
                                            <card style="margin-left: 15px">
                                                <a href="{{ path('film_showMember', {'id': film.id}) }}">
                                                    <img class="d-block w-100" src="{{ asset('dist/img/' ~ film.img) }}"
                                                         width="230" height="260">
                                                </a>
                                            </card>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="row">
                                    {% for film in films %}
                                        <div class="col-sm">
                                            <card style="margin-left: 15px">
                                                <a href="{{ path('film_showMember', {'id': film.id}) }}">
                                                    <img class="d-block w-100" src="{{ asset('dist/img/' ~ film.img) }}"
                                                         width="230" height="260">
                                                </a>
                                            </card>
                                        </div>
                                    {% endfor %}
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="container2">
                    <div class="row">
                        <div class="col-12">
                            <h3 style="margin: 20px 0px 20px 15px;font-weight: 600;text-transform: uppercase;font-size: 20px">
                                Drama</h3>
                            {% for film in films %}
                                {% if film.genre =='Drama' %}

                                    <card style="margin-left: 15px">
                                        <a href="{{ path('film_showMember', {'id': film.id}) }}"><img
                                                    src="{{ asset('dist/img/' ~ film.img) }}" width="230" height="260"></a>
                                    </card>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="container2">
                    <div class="row">
                        <div class="col-12">
                            <h3 style="margin: 20px 0px 20px 15px;font-weight: 600;text-transform: uppercase;font-size: 20px">
                                Horror</h3>
                            {% for film in films %}
                                {% if film.genre =='Horror' %}
                                    <card style="margin-left: 15px">
                                        <a href="{{ path('film_showMember', {'id': film.id}) }}"><img
                                                    src="{{ asset('dist/img/' ~ film.img) }}" width="230" height="260"></a>
                                    </card>
                                {% endif %}

                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="container2">
                    <div class="row">
                        <div class="col-12">
                            <h3 style="margin: 20px 0px 20px 15px;font-weight: 600;text-transform: uppercase;font-size: 20px">
                                Action</h3>
                            {% for film in films %}
                                {% if film.genre =='Action' %}
                                    <card style="margin-left: 15px">
                                        <a href="{{ path('film_showMember', {'id': film.id}) }}"><img
                                                    src="{{ asset('dist/img/' ~ film.img) }}" width="230" height="260"></a>
                                    </card>
                                {% endif %}

                            {% endfor %}
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer" style="text-align: center;margin-left:0px;">
            <strong>Copyright &copy; 2021 <a style="color: #eab3ac" href="https://adminlte.io">Infinite
                    Loop</a>.</strong> All rights reserved.
        </footer>
    </div>
{% endblock %}