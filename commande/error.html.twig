{% block body %}
    <h1>Commande Confirmée</h1>
    <p>Bonjour,</p>
    <p> Nous somme ravis de vous annoncer que votre commande a été confirmer .</p>
    <p> Cordialement </p>

    <h2 style="margin: 20px 0px 30px 15px;color:black;padding-top:20px;text-align: center;font-weight: 600;text-transform: uppercase;">
        Facture Ref#000264</h2>

    <table style="border: 1px solid black; width : 100%; text-align: center">
        <thead>
        <tr>
            <th style="border: 1px solid black; ">Produit</th>
{#            <th style="border: 1px solid black;">Image</th>#}
            <th style="border: 1px solid black;">Prix</th>
            <th style="border: 1px solid black;">Quantité</th>
            <th style="border: 1px solid black;">Total</th>
        </tr>
        </thead>
        <tbody>
        {% for element in dataPanier %}
            <tr>
                <td style="border: 1px solid black;">{{ element.produit.nom }}</td>
{#                <td style="border: 1px solid black;">#}
{#                    <img id="img"#}
{#                         style="height: 70px; width: 90px; border: solid black 1px; margin-top:2px; padding-top:2px;"#}
{#                         src="{{ asset('img/' ~ element.produit.image) }}">#}
{#                </td>#}

                <td style="border: 1px solid black;">{{ element.produit.prix }} TND</td>
                <td style="border: 1px solid black;">{{ element.quantite }}</td>
                <td style="border: 1px solid black;">{{ element.quantite * element.produit.prix }} TND</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Votre panier est vide</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th style="border: 1px solid black; text-align: left" colspan="3">Total</th>
            <th style="border: 1px solid black;" class="text-end">{{ total }} TND</th>
        </tr>
        </tfoot>
    </table>




{% endblock %}

