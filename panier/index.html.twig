{% extends 'baseMembre.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-header">
                    <h3 class="">Votre Panier</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body p-5">
                    <table id="productTable" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Image</th>
                            <th>Prix</th>
                            <th>Quantit√©</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for element in dataPanier %}
                            <tr id="Product-{{ element.produit.id }}">
                                <td class="text-center">{{ element.produit.nom }}</td>
                                <td class="text-center">
                                    <img width="100" height="110" id="img"
                                         class="card-img-top img-fluid"
                                         style="height: 100px; width: 110px; border: solid black 1px"
                                         src="/img/{{ element.produit.image }}"></td>
                                {# <td><img src="{{ asset('/img' ~ element.produit.image) }}" width="80" height="80" {{ element.produit.image }} ></td> #}
                                <td class="text-center"><span
                                            id="prixProduit-{{ element.produit.id }}">{{ element.produit.prix }}</span>
                                    TND
                                </td>
                                <td class="text-center"
                                    id="qteProduit-{{ element.produit.id }}">{{ element.quantite }}</td>
                                <td class="text-center">
                                    <span id="totalProduit-{{ element.produit.id }}">{{ element.quantite * element.produit.prix }}</span>
                                    TND
                                </td>

                                <td class="text-center">
                                    <button onclick="addProduct({{ element.produit.id }})"
                                            id="{{ element.produit.id }}"
                                            class="btn btn-success ">
                                        <i class="fas fa-plus-circle"></i>
                                    </button>
                                    <button onclick="removeProduct({{ element.produit.id }})"
                                            id="{{ element.produit.id }}"
                                            class="btn btn-warning ">
                                        <i class="fas fa-minus-circle"></i>
                                    </button>
                                    <button onclick="deleteProduct({{ element.produit.id }})"
                                            id="{{ element.produit.id }}"
                                            class="btn btn-danger ">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>

                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Votre panier est vide</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th colspan="4" class="text-left">Total</th>
                            <th class="text-center" align="center"><span id="totalPanier">{{ total }}</span> TND</th>
                            <td class="text-center">
                                <a href="{{ path("delete_all") }}" class="btn btn-danger">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>


                        </tfoot>
                    </table>
